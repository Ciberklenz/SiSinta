.botonera= render 'botonera_mostrar'

= fields_for @proyecto, html: { class: 'span-24' } do |f|

  = field_set_tag 'Datos del proyecto', class: 'celeste_oscuro span-23 last' do

    .span-22
      .span-2= f.label 'Nombre'
      .span-20.last= @proyecto.nombre

    .span-22
      .span-2= f.label 'Descripción'
      .span-20.last!= @proyecto.descripcion

    .span-22
      .span-2= f.label 'Cita'
      .span-20.last!= @proyecto.cita

    = field_set_tag 'Perfiles asociados', class: 'celeste plegable span-22 last' do
      .span-21.campo
        %table#perfiles
          %thead
            %tr
              %th.nombre    Nombre
              %th.numero    Número
              %th.fecha     Fecha
          %tbody
            = f.fields_for :perfiles do |ff|
              = render partial: 'perfil', locals: { ff: ff, perfil: ff.object, remover: false }

.botonera= render 'botonera_mostrar'
