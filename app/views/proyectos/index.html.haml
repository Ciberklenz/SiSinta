#lista
  .botonera= render 'botonera_index'

  %table#proyectos
    %thead
      %tr
        %th Nombre
        %th Descripcion
        %th Cita
        %th.numero Perfiles
        %th.acciones

    %tbody
      - @proyectos.each do |proyecto|
        %tr
          %td= proyecto.nombre
          %td!= proyecto.descripcion.try(:truncate, 35)
          %td!= proyecto.cita.try(:truncate, 35)
          %td.numero= proyecto.perfiles.length
          %td.acciones
            = link_to 'Mostrar', proyecto
            = '|'
            = link_to 'Editar', edit_proyecto_path(proyecto)
            = '|'
            = link_to 'Eliminar', proyecto, confirm: t(:confirmar), method: :delete

  .botonera= render 'botonera_index'
