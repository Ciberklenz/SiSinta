%tr{class: cycle("odd", "even")}
  - if remover
    %td.borrar
      =  link_to 'X', '#perfiles', class: 'remove remover'
  %td.nombre
    = ff.label :nombre, perfil.nombre, class: 'perfil_nombre'
  %td.numero.centrado
    = ff.label :numero, perfil.numero, class: 'perfil_numero'
  %td.fecha.centrado
    = ff.label :fecha, perfil.fecha
  %td.acciones
    = link_to 'Ver', perfil

  = ff.hidden_field :id
  = ff.hidden_field :_destroy
