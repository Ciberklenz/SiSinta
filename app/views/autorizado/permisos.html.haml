.botonera
  - if can? :read, @recurso
    = link_to 'Mostrar', @recurso
    = '|'
  = link_to 'Volver', "/#{@controlador}"

#permiso
  = form_tag permitir_url, method: :post, html: { class: 'span-24' } do |f|

    = field_set_tag "Miembros de #{@recurso}", class: 'celeste_oscuro span-23 last' do

      #multiselect-wrap
        = select_tag('usuario_ids[]',
            options_from_collection_for_select(@usuarios, :id, :nombre, @miembros),
            multiple: true, class: 'multiselect span-22 last')

      .acciones.span-4.last= submit_tag 'Asignar'
