.botonera= render 'botonera_mostrar'

#serie
  = fields_for @serie, html: { class: 'span-24' } do |f|

    = field_set_tag 'Datos del serie', class: 'celeste_oscuro span-23 last' do

      .span-22
        .span-2= f.label 'Nombre'
        .span-16= @serie.nombre
        .span-2= f.label 'Simbolo'
        .span-2.last= @serie.simbolo

      .span-22
        .span-2= f.label 'Descripción'
        .span-20.last!= @serie.descripcion

      = field_set_tag 'Perfiles asociados', class: 'celeste plegable span-22 last' do
        .span-21.campo
          %table#perfiles
            %thead
              %tr
                %th.numero          Número
                %th.ubicacion       Ubicación
                %th.fecha           Fecha
                %th.centrado.modal  ¿Es modal?
                %th.acciones
            %tbody
              = f.fields_for :perfiles do |ff|
                = render partial: 'perfil', locals: { ff: ff, perfil: ff.object, remover: false }

.botonera= render 'botonera_mostrar'
