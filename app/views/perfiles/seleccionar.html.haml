#busqueda_perfiles
  = form_tag siguiente_url, method: metodo_de_seleccion, class: 'span-24'

  %table
    %thead
      %tr
        %th.fecha=      link_para_ordenar :fecha,     t('.fecha')
        %th.serie=      link_para_ordenar :nombre,    t('.serie')
        %th.ubicacion=  link_para_ordenar :ubicacion, t('.ubicacion')
        %th.numero=     link_para_ordenar :numero,    t('.numero')
        %th.modal=      link_para_ordenar :modal,     t('.es_modal')
        %th.marcar
          #marcar_tag= label_tag 'check_marcar', t('.marcar_todo')
          #desmarcar_tag.desaparecer= label_tag 'check_marcar', t('.desmarcar_todo')
          = check_box_tag 'check_marcar', true, id: 'check_marcar', checked: true

    %tbody
      = render @perfiles

  .acciones
    .span-4= submit_tag t('.volver')
    .span-4= submit_tag t('.exportar')
    .span-4= submit_tag t('.procesar')
