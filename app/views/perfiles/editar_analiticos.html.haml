.botonera
  - if can? :read, @perfil
    = link_to 'Mostrar', perfil_analiticos_path(@perfil)
    = '|'
  - if can? :update, @perfil
    = link_to 'Editar perfil', edit_perfil_path(@perfil)
    = '|'
  = link_to 'Volver', perfiles_path

= render partial: 'analiticos/tabla', locals: {  perfil: @perfil,
                                      analiticos: @analiticos,
                                      bloqueado: false }

= volver_arriba
