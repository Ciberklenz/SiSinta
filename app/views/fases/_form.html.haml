= form_for(@fase, html: { class: 'span-24' }) do |f|

  = f.error_messages

  = field_set_tag @titulo, class: 'celeste_oscuro span-23 last' do

    = field_set_tag 'Definición', class: 'celeste plegable span-22 last' do
      .span-18.campo
        .span-2= f.label :nombre
        .span-16.last= f.text_field :nombre, disabled: bloqueado
        = ayuda_para('fase.nombre')
      .span-4.last.campo
        .span-2= f.label :codigo, 'Código'
        .span-1.last= f.text_field :codigo, disabled: bloqueado
        = ayuda_para('fase.codigo')

    - unless nueva
      = field_set_tag 'Perfiles asociados', class: 'celeste plegable span-22 last' do

        .span-21.last
          - if @fase.perfiles.any?
            = render partial: 'perfiles/lista', locals: {perfiles: @fase.perfiles}
          - else
            .empty.centrado No hay perfiles asociados

    .acciones.span-4.last= f.submit
