%table#perfiles_asociados
  %thead
    %tr
      %th.borrar.centrado X
      %th.nombre          Nombre
      %th.numero.centrado Número
      %th.ubicacion       Ubicación
      %th.fecha.centrado  Fecha
      %th.modal.centrado  ¿Es modal?
      %th.acciones
  %tbody
    = f.nested_fields_for :perfiles,  render_template: false,
                                      new_object: objeto.nuevo_perfil,
                                      show_empty: true do |ff|
      - if ff
        = render partial: 'comunes/perfil',
            locals: { ff: ff, perfil: ff.object }
      - else
        %tr.empty
          %td
          %td{colspan: 3} Buscá más perfiles para agregar.

= nested_fields_templates

- if @busqueda_perfil.present?
  = field_set_tag 'Agregar más perfiles', class: 'celeste_oscuro plegable' do
    #busqueda_perfil
      = search_form_for @busqueda_perfil do |b|
        .span-8= b.text_field :ubicacion_descripcion_or_serie_nombre_or_numero_cont

        .span-3=  b.label :tags_name_cont, "con estas etiquetas"
        .span-8= b.text_field :tags_name_cont
        .span-2.last= b.submit "Buscar", id: :seleccion
