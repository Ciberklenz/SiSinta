.span-1= h.text_field :tipo
.span-1= h.text_field :profundidad
.span-2
  = h.fields_for :limite do |h_l|
    .span-1= h_l.collection_select :limite_tipo_id, @tipos_limite, :id, :valor,
      :include_blank => true
    .span-1.last= h_l.collection_select :limite_forma_id, @formas_limite, :id,
      :valor, :include_blank => true
.span-4
  = h.fields_for :color do |h_c|
    .span-2= h_c.text_field :seco
    .span-2.last= h_c.text_field :humedo
.span-1= h.text_field :textura
.span-6
  = h.fields_for :estructura do |h_e|
    .span-2= h_e.text_field :tipo
    .span-2= h_e.text_field :clase
    .span-2.last= h_e.text_field :grado
.span-6
  =h.fields_for :consistencia do |h_c|
    .span-1= h_c.text_field :seco
    .span-1= h_c.text_field :humedo
    .span-2= h_c.text_field :mojado_plasticidad
    .span-2.last= h_c.text_field :mojado_adhesividad
.span-1.last= link_to 'X', '#', :class => 'remove'
